
if [ $1 ]
then
	fileC=$1
	file=$(basename "$fileC" .c)
else
	fileC=*
	file="a"
fi
fileOut=$file".out"

rm $fileOut
echo "---------- Norminette ----------"
norminette -R CheckForbiddenSourceHeader $fileC
echo "---------- Compilation ----------"
cc -Wall -Wextra -Werror $fileC -o $fileOut
echo "----------  Execution  ----------"
./$fileOut
